+++ CRUD OPERATIONS +++

CREATE TABLE users
(
    id NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    username VARCHAR2(100) NOT NULL,
    email VARCHAR2(100),
    created_at DATE DEFAULT SYSDATE
);

------------------------------------------------------------------------------

INSERT INTO SYSTEM.USERS (USERNAME, EMAIL)
VALUES ('Ali', 'ali@gmail.com');
COMMIT;

------------------------------------------------------------------------------

SELECT * FROM SYSTEM.USERS;

------------------------------------------------------------------------------

SELECT USERNAME, EMAIL FROM SYSTEM.USERS WHERE ID=3;

------------------------------------------------------------------------------

UPDATE SYSTEM.USERS
SET EMAIL = 'deyishdirilmish@email.com'
WHERE ID = '5';
COMMIT;

------------------------------------------------------------------------------

DELETE FROM SYSTEM.USERS
WHERE USERNAME = 'Adil';
COMMIT;
